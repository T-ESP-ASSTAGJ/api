{
  "commit-msg": {
    "enabled": true,
    "actions": [
      {
        "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
        "options": {
          "regex": "/^(:(zap|sparkles|bug|rocket|recycle|art|ambulance|white_check_mark|wrench|memo):) .+/",
          "error": "‚ùå Commit message must start with a valid gitmoji followed by a space and a message.\nAllowed: :zap: :sparkles: :bug: :rocket: :recycle: :art: :ambulance: :white_check_mark: :wrench: :memo:"
        }
      }
    ]
  },
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php"
      },
      {
        "action": "vendor/bin/phpstan analyse --memory-limit=512M"
      }
    ]
  }
}
